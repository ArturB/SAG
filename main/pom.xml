<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>sagwedt</groupId>
  <artifactId>main</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>main</name>
  <url>http://maven.apache.org</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>


  <dependencies>
  
  	<!--  JUnit do testÃ³w -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
    
    <!-- https://mvnrepository.com/artifact/nz.ac.waikato.cms.weka/weka-stable -->
	<dependency>
    	<groupId>nz.ac.waikato.cms.weka</groupId>
    	<artifactId>weka-stable</artifactId>
    	<version>3.8.2</version>
	</dependency>

	  <!-- https://mvnrepository.com/artifact/com.typesafe.akka/akka-actor -->
	  <dependency>
		  <groupId>com.typesafe.akka</groupId>
		  <artifactId>akka-actor_2.12</artifactId>
		  <version>2.5.8</version>
	  </dependency>

      <!-- https://mvnrepository.com/artifact/com.typesafe.akka/akka-remote -->
      <dependency>
          <groupId>com.typesafe.akka</groupId>
          <artifactId>akka-remote_2.12</artifactId>
          <version>2.5.8</version>
      </dependency>

      <!-- https://mvnrepository.com/artifact/commons-cli/commons-cli -->
      <dependency>
          <groupId>commons-cli</groupId>
          <artifactId>commons-cli</artifactId>
          <version>1.4</version>
      </dependency>

  </dependencies>


    <build>
		<plugins>

            <!-- Generate self-contained JARs -->
			<plugin>
    			<groupId>org.apache.maven.plugins</groupId>
    			<artifactId>maven-assembly-plugin</artifactId>
    			<executions>

                    <!-- launcher.jar -->
        			<execution>
                        <id>sag-launcher</id>
            			<phase>package</phase>
            			<goals>
                			<goal>single</goal>
            			</goals>
            			<configuration>
							<finalName>launcher</finalName>

                            <appendAssemblyId>false</appendAssemblyId>
                			<descriptorRefs>
                    			<descriptorRef>jar-with-dependencies</descriptorRef>
                			</descriptorRefs>
							<archive>
								<manifest>
									<mainClass>
                                        sag.Launcher
                                    </mainClass>
								</manifest>
							</archive>
            			</configuration>
        			</execution>

                    <!-- teacher.jar -->
                    <execution>
                        <id>sag-teacher</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <finalName>teacher</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                            <descriptorRefs>
                                <descriptorRef>jar-with-dependencies</descriptorRef>
                            </descriptorRefs>
                            <archive>
                                <manifest>
                                    <mainClass>
                                        sag.teacher.Teacher
                                    </mainClass>
                                </manifest>
                            </archive>
                        </configuration>
                    </execution>

                    <!-- requester.jar -->
                    <execution>
                        <id>sag-requester</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <finalName>requester</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                            <descriptorRefs>
                                <descriptorRef>jar-with-dependencies</descriptorRef>
                            </descriptorRefs>
                            <archive>
                                <manifest>
                                    <mainClass>
                                        sag.requester.Requester
                                    </mainClass>
                                </manifest>
                            </archive>
                        </configuration>
                    </execution>
    			</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>

            <!-- Generate Windows binaries -->
            <plugin>
                <groupId>com.akathist.maven.plugins.launch4j</groupId>
                <artifactId>launch4j-maven-plugin</artifactId>
                <executions>

                    <!-- launcher.exe -->
                    <execution>
                        <id>launcher-win</id>
                        <phase>install</phase>
                        <goals><goal>launch4j</goal></goals>
                        <configuration>
                            <headerType>console</headerType>
                            <outfile>target/launcher.exe</outfile>
                            <jar>target/launcher.jar</jar>
                            <errTitle>SAG System Launcher</errTitle>
                            <classPath>
                                <mainClass>sag.Launcher</mainClass>
                                <addDependencies>true</addDependencies>
                                <preCp>anything</preCp>
                            </classPath>
                            <jre>
                                <minVersion>1.8.0</minVersion>
                            </jre>
                        </configuration>
                    </execution>

                    <!-- teacher.exe -->
                    <execution>
                        <id>teacher-win</id>
                        <phase>install</phase>
                        <goals><goal>launch4j</goal></goals>
                        <configuration>
                            <headerType>console</headerType>
                            <outfile>target/teacher.exe</outfile>
                            <jar>target/teacher.jar</jar>
                            <errTitle>SAG Classifiers Teacher</errTitle>
                            <classPath>
                                <mainClass>sag.teacher.Teacher</mainClass>
                                <addDependencies>true</addDependencies>
                                <preCp>anything</preCp>
                            </classPath>
                            <jre>
                                <minVersion>1.8.0</minVersion>
                            </jre>

                        </configuration>
                    </execution>

                    <!-- requester.exe -->
                    <execution>
                        <id>requester-win</id>
                        <phase>install</phase>
                        <goals><goal>launch4j</goal></goals>
                        <configuration>
                            <headerType>console</headerType>
                            <outfile>target/requester.exe</outfile>
                            <jar>target/requester.jar</jar>
                            <errTitle>SAG System Requester</errTitle>
                            <classPath>
                                <mainClass>sag.requester.Requester</mainClass>
                                <addDependencies>true</addDependencies>
                                <preCp>anything</preCp>
                            </classPath>
                            <jre>
                                <minVersion>1.8.0</minVersion>
                            </jre>

                        </configuration>
                    </execution>


                </executions>
            </plugin>


		</plugins>
	</build>
  
  
  
  
</project>
